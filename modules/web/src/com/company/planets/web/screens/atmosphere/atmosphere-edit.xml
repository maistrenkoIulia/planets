<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="msg://editorCaption"
        focusComponent="form"
        messagesPack="com.company.planets.web.screens.atmosphere">
    <data>
        <instance id="atmosphereDc"
                  class="com.company.planets.atmosphere.Atmosphere"
                  view="atmosphere-view">
            <loader/>
        </instance>
        <collection id="atmosphericGasesDc" class="com.company.planets.atmosphericGas.AtmosphericGas">
            <view extends="_local">
                <property name="gas" view="_minimal"/>
            </view>
            <loader id="atmosphericGasesDl">
                <query>
                    <![CDATA[select e from planets_AtmosphereGas e]]>
                </query>
            </loader>
        </collection>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="editActions" spacing="true">
        <form id="form" dataContainer="atmosphereDc">
            <column width="250px">
                <textField id="descriptionField" property="description"/>
                <textField id="pressureField" property="pressure"/>
            </column>
        </form>
        <groupBox id="gasesBox"
                  caption="Atmospheric gases">
            <table id="gasesTable"
                   dataContainer="atmosphericGasesDc"
                   height="200px"
                   width="100%">
                <actions>
                    <action id="create"
                            type="create"/>
                    <action id="edit"
                            type="edit"/>
                    <action id="remove"
                            type="remove"/>
                </actions>
                <columns>
                    <column id="gas"/>
                    <column id="volume"/>
                </columns>
                <buttonsPanel>
                    <button id="createBtn"
                            action="gasesTable.create"/>
                    <button id="editBtn"
                            action="gasesTable.edit"/>
                    <button id="removeBtn"
                            action="gasesTable.remove"/>
                </buttonsPanel>
            </table>
        </groupBox>
        <hbox id="editActions" spacing="true">
            <button action="windowCommitAndClose" caption="Ok"/>
            <button action="windowClose" caption="Cancel"/>
        </hbox>
    </layout>
</window>
