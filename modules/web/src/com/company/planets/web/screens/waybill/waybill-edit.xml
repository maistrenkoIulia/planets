<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="msg://editorCaption"
        focusComponent="form"
        messagesPack="com.company.planets.web.screens.waybill">
    <data>
        <instance id="waybillDc"
                  class="com.company.planets.waybill.Waybill"
                  view="waybill-view">
            <loader/>
        </instance>
        <collection id="customersDc" class="com.company.planets.customer.Customer">
            <view extends="_local"/>
            <loader id="customersDl">
                <query>
                    <![CDATA[select e from planets_Customer e]]>
                </query>
            </loader>
        </collection>
        <collection id="waybillItemsDc" class="com.company.planets.waybillItem.WaybillItem" view="waybillItem-view">
            <loader id="waybillItemsDl">
                <query>
                    <![CDATA[select e from planets_WaybillItem e ]]>
                </query>
            </loader>
        </collection>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="editActions" spacing="true">
        <form id="form" dataContainer="waybillDc">
            <column width="250px">
                <textField id="referenceField" property="reference"/>
                <lookupField id="consigneeField"
                             caption="Consignee"
                             dataContainer="customersDc"
                             property="name">
                </lookupField>
                <pickerField id="departurePortField" property="departurePort">
                    <actions>
                        <action id="lookup" type="picker_lookup"/>
                        <action id="clear" type="picker_clear"/>
                    </actions>
                </pickerField>
                <pickerField id="destinationPortField" property="destinationPort">
                    <actions>
                        <action id="lookup" type="picker_lookup"/>
                        <action id="clear" type="picker_clear"/>
                    </actions>
                </pickerField>
                <pickerField id="carrierField" property="carrier">
                    <actions>
                        <action id="lookup" type="picker_lookup"/>
                        <action id="clear" type="picker_clear"/>
                    </actions>
                </pickerField>
                <textField id="totalWeightField" property="totalWeight"/>
                <textField id="totalChargeField" property="totalCharge"/>
            </column>
        </form>
        <groupBox id="waybillItems"
                  caption="Waybill Items">
            <table id="itemTable"
            dataContainer="waybillItemsDc"
                   height="200px"
                   width="100%">
                <actions>
                    <action id="create"
                            type="create"/>
                    <action id="edit"
                            type="edit"/>
                    <action id="remove"
                            type="remove"/>
                </actions>
            <columns>
                <column id="number"/>
                <column id="name"/>
                <column id="weight"/>
                <column id="charge"/>
                </columns>
                <buttonsPanel>
                    <button id="createBtn"
                            action="itemTable.create"/>
                    <button id="editBtn"
                            action="itemTable.edit"/>
                    <button id="removeBtn"
                            action="itemTable.remove"/>
                </buttonsPanel>
            </table>
        </groupBox>
        <hbox id="editActions" spacing="true">
            <button action="windowCommitAndClose" caption="Ok"/>
            <button action="windowClose" caption="Cancel"/>
        </hbox>
    </layout>
</window>
